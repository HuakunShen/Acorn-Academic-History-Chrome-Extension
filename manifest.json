{
  "name": "Acorn Acedemic History Extension",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://acorn.utoronto.ca/*"],
      "js": ["jquery-3.6.0.min.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["webRequest", "downloads", "storage"],
  "host_permissions": ["https://acorn.utoronto.ca/sws/rest/history/academic/complete"],
  "action": {
    "default_popup": "popup.html"
  }
}
