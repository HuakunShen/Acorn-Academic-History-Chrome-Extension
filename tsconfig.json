{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["chrome", "jquery"],
    "paths": {
      "@/*": ["src/popup/*", "src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  // "include": [
  //   "src/**/*.ts",
  //   "src/popup/**/*.tsx",
  //   "src/popup/**/*.vue",
  //   "tests/**/*.ts",
  //   "tests/**/*.tsx"
  // ],
  "include": ["src/**/*.ts", "src/**/*.vue"]
  // "exclude": ["node_modules"]
}
